<% if Spree::Config.direct_link %>
  <script type="text/javascript">
    $(document).ready(function(){
      if(window !== window.top){
        $("ul#products li a").each(function(){
          $(this).attr("href", $(this).data("real"));
          $(this).attr("target", "_top");
        });
      }
    });
  </script>
<% end %>